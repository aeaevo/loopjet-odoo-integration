<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend sale order form to show Loopjet information -->
    <record id="sale_order_view_form_loopjet" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.loopjet</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add Loopjet AI ribbon badge in the corner -->
            <xpath expr="//form/sheet/div[hasclass('oe_button_box')]" position="after">
                <widget name="web_ribbon" title="AI Generated" bg_color="text-bg-info" invisible="not loopjet_generated"/>
            </xpath>
            
            <!-- Add Loopjet tab with AI reasoning and data -->
            <xpath expr="//notebook" position="inside">
                <page string="Loopjet AI" invisible="not loopjet_generated">
                    <group>
                        <group>
                            <field name="loopjet_generated" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="AI Reasoning">
                        <field name="loopjet_reasoning" readonly="1" nolabel="1" 
                               placeholder="AI explanation of how this estimate was generated..."/>
                    </group>
                    
                    <group string="Raw API Response" groups="base.group_no_one">
                        <field name="loopjet_estimate_data" readonly="1" nolabel="1" widget="text"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

