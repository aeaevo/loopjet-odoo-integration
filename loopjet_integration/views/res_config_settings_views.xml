<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_loopjet" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.loopjet</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Loopjet Integration" name="loopjet_integration">
                    <block title="Loopjet AI Integration">
                        <setting id="loopjet_api_settings" string="API Key">
                            <field name="loopjet_api_key" password="True" placeholder="Enter your Loopjet API key"/>
                            <div class="text-muted mt-1">
                                Get your API key from <a href="https://app.loopjet.io/api-usage" target="_blank">https://app.loopjet.io/api-usage</a>
                            </div>
                        </setting>
                        <setting id="loopjet_language_setting" string="Default Language" help="Language for AI-generated estimates">
                            <field name="loopjet_default_language"/>
                        </setting>
                        <setting id="loopjet_sync_info" string="Data Synchronization">
                            <div class="alert alert-info" role="alert">
                                <strong>Automatic Sync:</strong> When you generate an AI estimate from a CRM deal, 
                                Loopjet will automatically sync:
                                <ul class="mb-0 mt-2">
                                    <li>All products and services</li>
                                    <li>The customer contact</li>
                                    <li>Related invoices and estimates (for context)</li>
                                </ul>
                                <p class="mt-2 mb-0">
                                    <em>No manual syncing required!</em> Data is always up-to-date when you need it.
                                </p>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>

